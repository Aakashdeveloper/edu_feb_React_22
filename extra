var a = [-1,0,1,2,3]
a.map((data) => {return data*2})
[-2,0,2,4,6]

var a = [-1,0,1,2,3]
a.filter((data) => {return data*2})
[-1,1,2,3]

var a = ["Delhi","Mumbai","Pune","Amsterdam"]

a.indexOf('Pune')
2
